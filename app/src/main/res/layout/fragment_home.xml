<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_variant_bottom"
    tools:context=".home.presentation.HomeFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_salutation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/home_salutation"
        android:textSize="@dimen/text_size_twenty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_check_rates"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <br.com.michellebrito.financefocus.customcomponent.CustomButton
        android:id="@+id/btn_check_rates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_sixteen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_salutation"
        app:title="@string/btn_check_rates" />

    <br.com.michellebrito.financefocus.customcomponent.CustomButton
        android:id="@+id/btn_create_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_sixteen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_check_rates"
        app:title="@string/btn_create_goal" />

    <br.com.michellebrito.financefocus.customcomponent.CustomButton
        android:id="@+id/btn_view_goals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_sixteen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_create_goal"
        app:title="@string/btn_view_goals" />

</androidx.constraintlayout.widget.ConstraintLayout>
